@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
    <div class="card p-3">
        <div class="p-2 m-1">
            <h1 class="bg-info text-white text-center">Todos los Roles</h1>
        </div>
        <a asp-action="Create" class="btn btn-secondary">Crear un Role</a>

        <table class="table table-sm table-bordered table-bordered">
            <tr><th>ID</th><th>Name</th><th>Users</th><th>Update</th><th>Delete</th></tr>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td i-role="@role.Id"></td>
                    <td class="text-center"><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">Update</a></td>
                    <td class="text-center">
                        <form asp-action="Delete" asp-route-id="@role.Id" method="post">

                            <button type="submit" class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </table>

    </div>